@using SyberGate.RMACT.Authorization
@using SyberGate.RMACT.Web.Areas.App.Models.BaseRMRates
@using SyberGate.RMACT.Web.Areas.App.Startup
@model BaseRMRatesViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Common.BaseRMRates;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/BaseRMRates/Index.js" asp-append-version="true"></script>
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("BaseRMRates")" description="@L("BaseRMRatesHeaderInfo")">
        

        @if (IsGranted(AppPermissions.Pages_Administration_BaseRMRates_Create))
        {
	<button id="CreateNewBaseRMRateButton" class="btn btn-primary btn-sm">
    		<i class="fa fa-plus"></i> @L("CreateNewBaseRMRate")
	</button>}
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="BaseRMRatesTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetBaseRMRatesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="RMGroupNameFilterId">(@L("RMGroup")) @L("Name")</label>
									<input type="text" class="form-control" name="rmGroupNameFilter" id="RMGroupNameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="UnitOfMeasurementCodeFilterId">(@L("UnitOfMeasurement")) @L("Code")</label>
									<input type="text" class="form-control" name="unitOfMeasurementCodeFilter" id="UnitOfMeasurementCodeFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="YearNameFilterId">(@L("Year")) @L("Name")</label>
									<input type="text" class="form-control" name="yearNameFilter" id="YearNameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="BuyerNameFilterId">(@L("Buyer")) @L("Name")</label>
									<input type="text" class="form-control" name="buyerNameFilter" id="BuyerNameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="SupplierNameFilterId">(@L("Supplier")) @L("Name")</label>
									<input type="text" class="form-control" name="supplierNameFilter" id="SupplierNameFilterId">
								</div>
                            </div>

                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
	    </div>
            <div class="align-items-center">
                <table id="BaseRMRatesTable" class="table table-separate table-head-custom dataTable no-footer dtr-inline dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("RMGroupName")</th>
                            <th>@L("BuyerName")</th>
                            <th>@L("SupplierName")</th>
                            <th>@L("UnitOfMeasurementCode")</th>
                            <th>@L("Month")</th>
                            <th>@L("YearName")</th>
                            <th>@L("UnitRate")</th>
                            <th>@L("ScrapPercent")</th>
                            <th>@L("ScrapAmount")</th>
                            <th>@L("WeightRatio")</th>
                            <th>@L("MeltingLossRatio")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>