@using SyberGate.RMACT.Authorization
@using SyberGate.RMACT.Web.Areas.App.Models.BaseRMRates
@using SyberGate.RMACT.Web.Areas.App.Models.Common.Modals
@using SyberGate.RMACT.Web.Areas.App.Startup
@model BaseRMHistoryViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Common.BaseRMRates;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/BaseRMRates/BaseRMHistoryModal.js" asp-append-version="true"></script>
}

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(@L("BaseRMHistory")))

<div class="d-flex flex-column flex-column-fluid" id="kt_content">
    
    <input type="hidden" id="RMGroupNameFilterId" value="@Model.RMGroup" />
    
    <input type="hidden" id="BuyerNameFilterId" value="@Model.Buyer" />
    <input type="hidden" id="SupplierNameFilterId" value="@Model.Supplier" />
    <div class="@(await GetContainerClass()) card card-custom h-100">
        <div class="card-header align-items-center border-0 mt-4">
            <h3 class="card-title align-items-start flex-column">
                <span class="font-weight-bolder text-dark">@Model.RMGroup</span>
                <small><i class=" p-0 m-0 fa fa-user"></i> Buyer : <span class=" text-dark" id="buyer">@Model.Buyer</span> <i class=" p-0 m-0 fa fa-user"></i>Supplier : <span class=" text-dark" id="supplier">@Model.Supplier</span></small>
            </h3>
        </div>
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="align-items-center">
                    <table id="BaseRMHistoryTable" class="table table-separate table-head-custom dataTable no-footer dtr-inline dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>@L("UnitRate")</th>
                                <th>@L("ScrapAmount")</th>
                                <th>@L("Date")</th>
                                @*<th>@L("YearName")</th>*@
                                <th>@("WeightRatio")</th>
                                <th>@("LossRatio")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>